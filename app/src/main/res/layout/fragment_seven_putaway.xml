<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimen_60"
    android:layout_marginEnd="@dimen/dimen_60"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SevenPutawayFragment">

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_goToZone"
        style="@style/medium_18sp"
        android:padding="@dimen/dimen_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:background="@drawable/et_all_rounded_grey"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorSeagreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Scan" />

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_scanZone"
        style="@style/medium_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25_dp"
        android:gravity="bottom|center"
        android:singleLine="true"
        android:text="@string/scan_zone"
        android:textColor="@color/txt_wearehouse_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_goToZone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.bfc.putaway.customviews.PutAwayCustomEditText
        android:id="@+id/edit_scanZone"
        style="@style/regular_16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:layout_marginStart="@dimen/dimen_80"
        android:layout_marginEnd="@dimen/dimen_80"
        android:layout_marginBottom="@dimen/dimen_10_dp"
        android:background="@drawable/et_rounded"
        android:gravity="center"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:singleLine="true"
        android:maxLength="6"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/tv_scanZone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >
        <requestFocus/>
    </com.bfc.putaway.customviews.PutAwayCustomEditText>

</androidx.constraintlayout.widget.ConstraintLayout>