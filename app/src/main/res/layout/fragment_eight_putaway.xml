<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dimen_60"
    android:paddingEnd="@dimen/dimen_60"
    tools:context=".view.fragments.EightPutawayFragment">

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_zone"
        style="@style/medium_16sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/et_rounded_up_gray"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Scan" />

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_qty"
        style="@style/medium_16sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/et_grey_background"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_zone"
        tools:text="Scan" />

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_desc"
        style="@style/medium_16sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/et_rounder_below_grey"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_qty"
        tools:text="Scan" />

    <com.bfc.putaway.customviews.PutAwayCustomTextView
        android:id="@+id/tv_scan"
        style="@style/medium_18sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:gravity="bottom|center"
        android:singleLine="true"
        android:text="@string/scan_lic"
        android:textColor="@color/txt_wearehouse_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

    <com.bfc.putaway.customviews.PutAwayCustomEditText
        android:id="@+id/edit_scan"
        style="@style/medium_16sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimen_80"
        android:layout_marginEnd="@dimen/dimen_80"
        android:background="@drawable/et_rounded"
        android:gravity="center|center_vertical"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:padding="@dimen/dimen_3_dp"
        android:singleLine="true"
        android:maxLength="15"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scan">

        <requestFocus />
    </com.bfc.putaway.customviews.PutAwayCustomEditText>

</androidx.constraintlayout.widget.ConstraintLayout>